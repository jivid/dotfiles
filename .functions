function goto(){
  if [ "$1" == "make" ]
  then
    if [ -z $2 ]
    then
      echo "No source specified!"
      return
    fi

    if [ -z $3 ]
    then
      target=`basename $2`
    else
      target=$3
    fi

    ln -s ${2%/} ~/.goto/$target 
  elif [ "$1" == "remove" ]
  then
    if [ -z $2 ]
    then
      echo "No target specified!"
      return
    fi
    rm ~/.goto/$2
  else
    cd ~/.goto/$1
  fi
}


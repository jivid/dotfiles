function mkd() {
  mkdir -p "$@" && cd "$@"
}

function parse_git_branch {
  git branch &>/dev/null
  if [ $? == '0' ]
  then 
    branch=$(git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/')
    echo "$branch "
  fi
}
